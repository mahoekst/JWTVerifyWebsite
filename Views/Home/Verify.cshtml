@model MessageViewModel
@{
    ViewData["Title"] = "Verify";
}

<h1>Verify</h1>
<p>Enter JWT to validate:</p>
@using (Html.BeginForm("Verify", "Home", FormMethod.Post))
{
    @Html.TextAreaFor(m => m.SignedBody, new {cols="30", rows="30",@style="min-width:500px; max-width:100%;max-height:350px;height:100%;width:100%;"});
    <br /><br />
    <input type="submit" value="Verify" />


}

<br /><br />
<p>Result Token:</p>
@Html.DisplayFor(m => m.Body)

<br /><br />
<p>Message:</p>
<B>@Html.DisplayFor(m => m.result)</B>


